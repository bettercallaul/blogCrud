<%- include("partials/header") -%>
<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>
<form action="/delete" method="post">
  <h1><%=post.title%> <input type="checkbox" name="checkbox" onChange="this.form.submit()" value="<%=post._id%>" /></h1>

  <p>
    <%=post.content.substring(0, 100) + " ..."%>

    <a href="/posts/<%=post._id%>">Read More</a>
  </p>
  <input type="hidden" name="listName" value="<%=startingContent%>" />
</form>
<% }) %> <%- include("partials/footer") -%>
